<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Hello Page Template -->
        <template id="hello_page" name="Hello Page">
            <t t-call="website.layout">
                <t t-set="title">Hello Page</t>
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-header bg-primary text-white">
                                    <h2>Hello World!</h2>
                                </div>
                                <div class="card-body">
                                    <h4>Welcome to our Hello Module</h4>
                                    <p class="lead">This is a simple hello page created with Odoo.</p>
                                    <a href="/web" class="btn btn-primary">Go to Odoo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
